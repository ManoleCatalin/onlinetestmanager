@model OTM.ViewModels.Tests.DisplayTestsViewModel
    
<h1>@Html.DisplayFor(model => model.Description)</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Display">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ExerciseId" type="hidden"/>
            </div>
            @foreach (var item in Model.Answers)
            {
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="@item.Correct" />
                            <div style="display: inline-block">@Html.DisplayFor(model => item.Description)</div>
                        </label>
                    </div>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Display" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

