@model IEnumerable<OTM.ViewModels.ScheduledTest.IndexScheduledTestViewModel>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-md-3"></div>
        <div class="col-md-6" style="text-align: center">
            <a class="btn btn-info" asp-action="Create" style="margin: 10px 0 10px 0">Create New</a>
            @if (Model.Count() != 0)
            {
                <div class="box-header with-border" style="text-align: center">
                    <i class="fa fa-clock-o"></i>
                    <h3 class="box-title" style="font-size: 25px;">Scheduled tests: </h3>

                </div>
            }
           
            @foreach (var item in Model)
            {
                <div class="box box-solid">
                 @*   <div class="box-header with-border" style="text-align: center">
                        <i class="fa fa-clock-o"></i>
                        <h3 class="box-title">Schedule</h3>

                    </div>*@
                    <!-- /.box-header -->
                    
                    <div class="box-body">
                        <div class="col-md-9">
                            <dl class="dl-horizontal">
                                <dt>@Html.DisplayNameFor(model => model.TestName):</dt>
                                <dd>@Html.DisplayFor(modelItem => item.TestName)</dd>
                                <dt>@Html.DisplayNameFor(model => model.GroupName):</dt>
                                <dd>@Html.DisplayFor(modelItem => item.GroupName)</dd>
                                <dt>@Html.DisplayNameFor(model => model.Duration):</dt>
                                <dd>@Html.DisplayFor(modelItem => item.Duration)</dd>
                                <dt>@Html.DisplayNameFor(model => model.StartDateTime):</dt>
                                <dd>@Html.DisplayFor(modelItem => item.StartDateTime)</dd>

                            </dl>
                        </div>
                        <div class="col-md-3">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default">Actions</button>
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                                    <li><a asp-action="Details" asp-route-id="@item.Id">Details</a></li>
                                    <li><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- /.box-body -->
                </div>
            }
            <!-- /.box -->
        </div>
    </div>
</div>