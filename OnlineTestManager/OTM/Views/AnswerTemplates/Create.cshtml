@model OTM.ViewModels.AnswerTemplate.CreateAnswerTemplatesViewModel


<div class="content-wrapper">

    <div class="container-fluid" style="text-align: center">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="box box-solid" style="margin: 25px 0 0 0">
                <div class="box-header with-border">
                    <h3 class="box-title">Add answer to exercise template</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal" asp-action="Create">
                    <div class="box-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="TestTemplateId" type="hidden" />
                            <input asp-for="ExerciseTemplateId" type="hidden" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="col-sm-2 control-label"></label>

                            <div class="col-sm-10">
                                <input asp-for="Description" class="form-control" id="searchStudent">
                            </div>
                            
                        </div>
                        
                        <div class="form-group">
                            <div class="checkbox ">
                                
                                <label>

                                    <input asp-for="Correct"/> @Html.DisplayNameFor(model => model.Correct)

                                </label>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer" style="text-align: center">
                        <a class="btn btn-default" asp-controller="ExerciseTemplates" asp-action="Edit" asp-route-testTemplateId="@Model.TestTemplateId" asp-route-exerciseTemplateId="@Model.ExerciseTemplateId">Cancel</a>
                        <input type="submit" value="Create" class="btn btn-info" />
                    </div>
                    <!-- /.box-footer -->
                </form>

            </div>
        </div>
    </div>
</div>
