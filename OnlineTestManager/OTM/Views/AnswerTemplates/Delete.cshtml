@model OTM.ViewModels.AnswerTemplate.DeleteAnswerTemplatesViewModel

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="box box-solid" style="margin: 25px 0 0 0;text-align: center">
                <div class="box-header with-border">
                    <h3 class="box-title">Are you sure you want to delete this?</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal" asp-action="Delete">
                    <div class="box-body">
                        <div class="col-md-9">
                            <dl class="dl-horizontal">

                                <dt>
                                    @Html.DisplayNameFor(model => model.Description)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Description)
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <!-- /.box-body -->
                    <div class="box-footer" style="text-align: center">
                        <input type="hidden" asp-for="Id" />
                        <input asp-for="TestTemplateId" type="hidden" />
                        <input asp-for="ExerciseTemplateId" type="hidden" />
                        <a class="btn btn-default"asp-action="Edit" asp-controller="ExerciseTemplates" asp-route-testTemplateId="@Model.TestTemplateId"
                           asp-route-exerciseTemplateId="@Model.ExerciseTemplateId">Cancel</a>
                        <input type="submit" value="Delete" class="btn btn-info" />

                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
        </div>
    </div>
</div>
