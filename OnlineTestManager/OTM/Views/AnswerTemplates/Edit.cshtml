@model OTM.ViewModels.AnswerTemplate.EditAnswerTemplatesViewModel

@{
    ViewData["Title"] = "Edit";
}


<div class="content-wrapper">
  <div class="container-fluid">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="box box-solid" style="margin: 25px 0 0 0;text-align: center">
            <div class="box-header with-border">
                <h3 class="box-title">Edit current answer</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" asp-action="Edit">
                <div class="box-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TestTemplateId" />
                    <input type="hidden" asp-for="AnswerTemplateId" />
                    <input type="hidden" asp-for="ExerciseTemplateId" />     
                    <div class="form-group">
                        <label asp-for="Description" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Description" class="form-control" />
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Correct" /> @Html.DisplayNameFor(model => model.Correct)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="box-footer" style="text-align: center">
                    <a class="btn btn-default" asp-controller="ExerciseTemplates" asp-action="Edit" asp-route-testTemplateId="@Model.TestTemplateId" asp-route-exerciseTemplateId="@Model.ExerciseTemplateId">Cancel</a>
                    <button type="submit" class="btn btn-info ">Save</button>
                </div>

            </form>
        </div>
    </div>
 </div>
</div>