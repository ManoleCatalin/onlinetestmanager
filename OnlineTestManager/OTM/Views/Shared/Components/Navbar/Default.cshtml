@using Constants
@using OTM.ViewModels
@model OTM.ViewModels.NavbarViewModel
<header class="main-header">
    <!-- Header Navbar -->
    <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <!-- User Account Menu -->
                <li class="dropdown user user-menu">
                    <!-- Menu Toggle Button -->
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <!-- The user image in the navbar-->
                        <img src="dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
                        <!-- hidden-xs hides the username on small devices so only the image appears. -->
                        <span class="hidden-xs">Alexander Pierce</span>
                    </a>
                  
                </li>
            </ul>
        </div>
    </nav>

</header>
<aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

        <!-- Sidebar user panel (optional) -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="dist/img/user-icon.png" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                @*     <p>Alexander Pierce</p>
                    <!-- Status -->
                    <i class="fa fa-circle text-success"></i> Online*@
            </div>
        </div>

        <ul class="sidebar-menu" data-widget="tree">
                @if (Model.Role == null)
                {

                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fa fa-home"></i>
                            <span>Home</span>
                            <span class="pull-right-container"></span>
                        </a>
                    </li>
                                <li>
                                    <a asp-area="" asp-controller="Home" asp-action="About">
                                        <i class="fa fa-question-circle"></i>
                                        <span>About</span>
                                        <span class="pull-right-container"></span>
                                    </a>
                                </li>
                                @*<li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>*@
                                <li>
                                    <a asp-area="" asp-controller="Account" asp-action="Login">
                                        <i class="fa fa-sign-in"></i>
                                        <span>Login</span>
                                        <span class="pull-right-container"></span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Account" asp-action="Register">
                                        <i class="fa fa-sign-out"></i>
                                        <span>Register</span>
                                        <span class="pull-right-container"></span>
                                    </a>
                                </li>

                }
                else
                {
                    if (Model.Role.Name.Equals(RoleConstants.TeacherRoleName))
                    {
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                                    <li><a asp-area="" asp-controller="TestTemplates" asp-action="Index">Test Templates</a></li>
                                    <li><a asp-area="" asp-controller="Groups" asp-action="Index">Groups</a></li>
                                    <li><a asp-area="" asp-controller="ScheduledTests" asp-action="Index">Scheduled tests</a></li>
                                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Grading</a></li>
                    }
                    else if (Model.Role.Name.Equals(RoleConstants.StudentRoleName))
                    {
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Tests</a></li>
                                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Grades</a></li>
                    }
                }
        </ul>

        <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
</aside>